[flake8]
# Lines should be between 79 to 95, but the hard-stop is 105
max-line-length = 105

per-file-ignores =
    # Allow any __init__.py file to have unused imports
    **/__init__.py: F401, F403, F405

ignore =
    # Bare except (needed to catch cancellations)
    E722,
    # Line break before binary operator (Flake8 has one for before- and after
    # linebreaks. From my understanding you're meant to disable one of them).
    W503
